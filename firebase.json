{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/api/v1/**",
        "function": "default"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "headers": [ {
        "source": "**",
        "headers": [ {
            "key": "Cache-Control",
            "value": "public, max-age=31536000"
        } ]
    } ]
  },
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint",
      "npm --prefix \"$RESOURCE_DIR\" run build"
    ]
  }
}
